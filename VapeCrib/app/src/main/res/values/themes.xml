<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VapeCrib" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.VapeCrib.NoActionBar" parent="Theme.VapeCrib">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Styles that were mistakenly deleted -->
    <style name="Theme.VapeCrib.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.VapeCrib.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for the dark cards -->
    <style name="Theme.App.Card" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

</resources>